
<div class=" my_name_store">

  <div class="row">
  <div class="list-group" id="list-tab" role="tablist">
    <div class="col-sm list-group-item-dark bl-5 h2 rounded-lg">
    
By :<%= @store.user.name%> <hr> <%= @store.name%>

    </div>
</div>
  </div>
</div>


<% if(user_signed_in? ) %>
<% if(current_user.id == @store.user.id)%><br>
<%= link_to 'Edit product info' , edit_store_product_path(@store , @product),class: "btn btn-info" %>
<%= link_to 'Delete this product' , store_product_path(@store),method: :delete ,class: "btn btn-danger"%>
 
<% end %>
<% end %>
<hr>

<div class="container ">
<div class="card col-sm-12 col-lg-10">
  <div class="card-header">
    <h1><%= @product.name%></h1>
  </div>
  <img class="card-img-top " style="width:100%; "  src="<%= @product.image%>" alt="image ">
  <div class="card-body">
    <h5 class="card-title">Price: <%= @product.price%> SAR</h5>
    <p class="card-text">In Stock :<%= @product.quantity%></p>
    
  </div>
</div>
</div>
